    <body>
    <div class="container mt-5">
        <div class="form-container">
            <h1 class="mb-4 text-center">Ajouter un nouvel article de blog</h1>

            <form action="/article/add" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Titre</label>
                    <input type="text" class="form-control custom-input" id="title" name="title" value placeholder="Entrez le titre du blog" required>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">URL de l'image</label>
                    <input type="file" class="form-control custom-input" id="image" name="image" placeholder="Entrez  de l'image" required>
                </div>

                <div class="mb-3">
                    <label for="content" class="form-label">Contenu</label>
                    <textarea class="form-control custom-input" id="content" rows="6" name="content" placeholder="Entrez le contenu du blog" required></textarea>
                </div>

                <div class="mb-3">
                    <label for="createdAt" class="form-label">Date de cr√©ation</label>
                    <input type="date" class="form-control custom-input" id="createdAt" name="createdAt" required>
                </div>

                <button type="submit" class="btn btn-primary btn-block">send</button>
            </form>
        </div>
    </div>
    <!-- footer starts -->
